<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inciapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/inciapp_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/inciapp_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InciApp">

        <activity android:name=".OptActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity android:name=".DetailsActivity"/>
        <activity android:name=".RegisterCuadrillaActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".MapActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>